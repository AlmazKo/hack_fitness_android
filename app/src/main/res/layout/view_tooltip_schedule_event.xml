<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/abc_popup_background_mtrl_mult">

    <ImageView
        android:layout_width="74dp"
        android:layout_height="74dp"

        android:scaleType="fitCenter"
        android:id="@+id/img_trainer"
        android:layout_alignParentStart="true"
        android:src="@drawable/trainer_stub"
        android:background="@android:drawable/editbox_dropdown_light_frame"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/tooltip_title"
        android:layout_margin="4dp" />

    <TextView
        android:id="@+id/tooltip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/HF.Text.Title"
        android:textColor="@color/white"
        android:text="Tai-Bo"
        android:background="@color/event_taibo"
        android:layout_marginBottom="4dp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:id="@+id/txt_event_date_label"
        android:fontFamily="sans-serif"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/img_trainer"
        android:layout_alignTop="@+id/img_trainer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00-11:00 am, 10 Oct"
        android:id="@+id/txt_event_date"
        android:fontFamily="sans-serif-light"
        android:layout_toRightOf="@+id/txt_event_date_label"
        android:layout_alignTop="@+id/txt_event_date_label" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer:"
        android:id="@+id/txt_trainer_name_label"
        android:fontFamily="sans-serif"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/img_trainer"
        android:layout_below="@+id/txt_event_date_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Аврапов Кирилл"
        android:id="@+id/txt_trainer_name"
        android:fontFamily="sans-serif-light"
        android:layout_toRightOf="@+id/txt_trainer_name_label"
        android:layout_alignTop="@+id/txt_trainer_name_label" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="Go"
        android:id="@+id/button"
        android:clickable="true"
        android:layout_below="@+id/txt_trainer_name_label"
        android:fontFamily="sans-serif"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />


</RelativeLayout>